<%- include('./../partials/header'); %>


<div class="container">

    <div class="blog-title">
        <h1 class="mb-1"><%= blog.title %></title></h1>
        <div class="text-muted mb-2">Date Created <%= blog.dateAdded.toLocaleDateString() %>
    </div>

</div>
    
<div class="container">
        <div class="infor-image mb-1 col-8 blog-infor">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="<%= blog.image[0] %>" alt="Slide ">
                    </div>
                    <% for ( let i = 1; i < blog.image.length; i++) { %> 
                        <div class="carousel-item">
                                <img class="d-block w-100" src="<%= blog.image[i] %>" alt="Slide ">
                        </div>
                    <% } %> 
 
                </div>

                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
            

            <div class="infor-button"> 
                <% if (localUser.username === blog.creator) { %> 
                    <a href="/blogs/edit/<%= blog.slug %>" class="btn btn-info mb-1">Edit</a>
                <% } %> 
                    
            </div>
            
        </div>

        <div class="content col-10 blog-infor">
            <h5>Content</h5>
            <%= blog.content %> 
        </div>
        <hr>

        <div class="content col-10 blog-infor">
            <h5>Location</h5>
            <%= blog.address[0].city %>, <%= blog.address[0].country %>
        </div>
</div>



    

<%- include('./../partials/footer'); %>